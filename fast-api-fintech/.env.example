# Application Configuration
APP_NAME=FastAPI Fintech Application
DEBUG=True
API_V1_PREFIX=/api/v1
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./fintech.db
# For PostgreSQL use:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/fintech_db

# Security Configuration
SECRET_KEY=your-secret-key-change-this-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://localhost:8080"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Trading Configuration
MARKET_OPEN_HOUR=9
MARKET_CLOSE_HOUR=16
ENABLE_AFTER_HOURS_TRADING=False

# Banking Configuration
MIN_ACCOUNT_BALANCE=0.00
MAX_DAILY_TRANSFER_LIMIT=10000.00
CURRENCY_DEFAULT=USD

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@fintech.example.com
EMAILS_FROM_NAME=FastAPI Fintech

# Redis Configuration (Optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Sentry Configuration (Optional - for error tracking)
SENTRY_DSN=

# Testing
TEST_DATABASE_URL=sqlite+aiosqlite:///./test_fintech.db
